{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist/",
    "module": "commonjs",
    "lib": ["es2020"],
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules"]
}
