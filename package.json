{
  "name": "@floratmin/svelte-fragment-divider",
  "version": "4.2.0",
  "description": "Divide svelte files into script, style and HTML fragments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "LICENSE.md",
    "README.md"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "watch": "tsc -w -p src/",
    "build": "tsc -p src/",
    "lint": "eslint '{src,tests}/**/*.ts'",
    "lint:format": "eslint --fix '{src,tests}/**/*.ts'",
    "prettier": "prettier --config .prettierrc.js '{src,tests}/**/*.ts'",
    "prettier:format": "prettier --config .prettierrc.js '{src,tests}/**/*.ts' --write",
    "test": "jest --config jest.config.ts",
    "prepare": "husky install",
    "publish": "npm publish",
    "publish:inspect": "npm pack --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floratmin/svelte-fragment-divider.git"
  },
  "keywords": [
    "svelte",
    "fragments"
  ],
  "author": "Florian Murat Koch <florian.murat.koch@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "node-html-parser": "^5.2.0",
    "svelte": "^3.46.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-typescript": "^16.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
